<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bikeapp.xueyi.mybikeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CampusNewsActivity"
            android:label="@string/title_activity_campus_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudyGuideActivity"
            android:label="@string/title_activity_study_guide"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SingleStudyActivity"
            android:label="@string/title_activity_single_study"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlayGuideActivity"
            android:label="@string/title_activity_play_guide"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SinglePlayActivity"
            android:label="@string/title_activity_single_play"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
